%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], html: { class: 'form-horizontal' } do |f|
          %ul.nav.nav-tabs
            %li
              = link_to "Recent Payments", admin_payments_path
            %li.active
              = link_to "Add a New Video", new_admin_video_path
          %br
          %fieldset
            .form-group
              = f.text_field :title, class: 'form-control', label_class: 'control-label'
              = f.select :category_id, options_for_select(Category.all.map { |c| [c.name, c.id] }), class: 'form-control', label_class: 'control-label'
              = f.text_area :description, class: 'form-control', label_class: 'control-label', rows: 8
              = f.file_field :large_cover, class: 'btn btn-file', label_class: 'control-label'
              = f.file_field :small_cover, class: 'btn btn-file', label_class: 'control-label'
              = f.text_field :video_url, class: 'form-control', label: "Video URL", label_class: 'control-label'

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
